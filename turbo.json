{
   "$schema": "https://turbo.build/schema.json",
   "globalEnv": ["DATABASE_URL"],
   "globalDependencies": ["**/.env"],
   "ui": "tui",
   "tasks": {
      "build": {
         "dependsOn": ["^build"],
         "inputs": ["$TURBO_DEFAULT$", ".env*"],
         "outputs": [".next/**", "!.next/cache/**"]
      },
      "dev": {
         "cache": false,
         "persistent": true
      }
   }
}
